<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      <a href="/user/{{id}}" target="_blank" class="text-warning" style="text-decoration: none">{{user.username}}</a>
    </div>
    <div class="text">
      {{comment_text}}<br>
      Comment posted on {{format_date created_at}}
    </div>
  </section>
  {{/each}}
</div>

