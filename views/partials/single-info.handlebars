<article class="post">
    <div class="post-container">
        <div class="row">
            <div class="col-11">
                {{!-- Post Info --}}   
                <div class="card-posts rounded text-white bg-dark mb-3">
                <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="username">
                            <a href="/single-post/{{id}}" target="_blank" class="text-warning" style="text-decoration: none">{{user.username}}</a> 
                        </div>

                        {{!-- Post Text --}} 
                        <div class="text">
                            {{post_text}}
                        </div>

                        {{!-- Likes--}} 
                        <div class="meta">
                            {{vote_count}} {{format_plural "Like" vote_count}}
                            <svg class="bi bi-dot" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 9.5a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"/>
                            </svg>

                            {{!-- Commment count --}} 
                            {{comments.length}} {{format_plural "comment" comments.length}} 
                            <svg class="bi bi-dot" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 9.5a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z"/>
                            </svg>

                            {{!-- Created on --}} 
                            Posted on {{format_date created_at}}</a>
                        </div>

                        {{!-- Like Button  --}} 
                        <div class="buttons">
                            <button id="likeBtn" class="upvote-btn text-warning btn"><svg class="bi bi-heart-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                            </svg> Like</button>
                        
                            <button id="addCommentbtn" class="text-warning btn"><svg class="bi bi-chat-square-dots" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h2.5a2 2 0 0 1 1.6.8L8 14.333 9.9 11.8a2 2 0 0 1 1.6-.8H14a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h2.5a1 1 0 0 1 .8.4l1.9 2.533a1 1 0 0 0 1.6 0l1.9-2.533a1 1 0 0 1 .8-.4H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                            <path d="M5 6a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                            </svg> Add Comment</button>
                        </div>


                    </div>
                </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</article>